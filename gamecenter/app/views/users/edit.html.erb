<h1>編集画面</h1>
<%= form_for(@user) do |f| %>
    <h4>プロフィール画像</h4>
    <%= attachment_image_tag @user, :user_image, :fill, 100, 100, fallback: "no_image.jpg"%><br>
    <%= f.attachment_field :user_image, placeholder: "プロフィール画像"%>
    <h4>名前</h4>
    <%= f.text_field :name %>
    <h4>自己紹介</h4>
    <%= f.text_area :introduction %><br>
    <%= f.submit '保存' %>    
    <%# これで編集ができる %>
<% end %>